<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!--导航标题属性-->
    <!--顶部导航栏 -->
    <declare-styleable name="commonTitleView">
        <!-- 是否显示左边的回退按钮-->
        <attr name="show_left" format="boolean"/>
        <!-- 标题内容 -->
        <attr name="title_context" format="string"/>
        <!-- 是否显示右侧 -->
        <attr name="show_right" format="boolean"/>
        <!--标题字体大小 -->
        <attr name="title_size" format="dimension"/>
        <!--标题颜色-->
        <attr name="title_color" format="color"/>
    </declare-styleable>
</resources>
